<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".decodescale.DecodeScale">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/smallMargin"
        android:scrollbarStyle="outsideOverlay">

        <spilab.net.humbleimageview.HumbleImageView
            android:id="@+id/smallHumbleViewImageA"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="@dimen/smallMargin"
            android:scaleType="centerInside"
            app:debug="true"
            app:layout_constraintEnd_toStartOf="@+id/smallHumbleViewImageB"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loadedImageScaleType="centerCrop"
            app:srcCompat="@drawable/ic_photo_black"
            app:url="https://c1.staticflickr.com/1/318/19789239779_a82ece4aa8_k.jpg" />

        <spilab.net.humbleimageview.HumbleImageView
            android:id="@+id/smallHumbleViewImageB"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="@dimen/smallMargin"
            android:scaleType="centerInside"
            app:debug="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/smallHumbleViewImageA"
            app:layout_constraintTop_toTopOf="parent"
            app:loadedImageScaleType="centerCrop"
            app:srcCompat="@drawable/ic_photo_black"
            app:url="https://c1.staticflickr.com/1/299/20308321465_1f4ed99416_k.jpg" />

        <spilab.net.humbleimageview.HumbleImageView
            android:id="@+id/mediumHumbleViewImageA"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="@dimen/smallMargin"
            android:scaleType="centerInside"
            app:debug="true"
            app:layout_constraintEnd_toStartOf="@+id/mediumHumbleViewImageB"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/smallHumbleViewImageA"
            app:loadedImageScaleType="centerCrop"
            app:srcCompat="@drawable/ic_photo_black"
            app:url="https://c1.staticflickr.com/1/318/19789239779_a82ece4aa8_k.jpg" />

        <spilab.net.humbleimageview.HumbleImageView
            android:id="@+id/mediumHumbleViewImageB"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="@dimen/smallMargin"
            android:scaleType="centerInside"
            app:debug="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/mediumHumbleViewImageA"
            app:layout_constraintTop_toBottomOf="@+id/smallHumbleViewImageB"
            app:loadedImageScaleType="centerCrop"
            app:srcCompat="@drawable/ic_photo_black"
            app:url="https://c1.staticflickr.com/1/299/20308321465_1f4ed99416_k.jpg" />

        <spilab.net.humbleimageview.HumbleImageView
            android:id="@+id/bigHumbleViewImageA"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_margin="@dimen/smallMargin"
            android:scaleType="centerInside"
            app:debug="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mediumHumbleViewImageA"
            app:loadedImageScaleType="centerCrop"
            app:srcCompat="@drawable/ic_photo_black"
            app:url="https://c1.staticflickr.com/1/318/19789239779_a82ece4aa8_k.jpg" />

        <spilab.net.humbleimageview.HumbleImageView
            android:id="@+id/bigHumbleViewImageB"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/smallMargin"
            android:layout_marginLeft="@dimen/smallMargin"
            android:layout_marginRight="@dimen/smallMargin"
            android:layout_marginStart="@dimen/smallMargin"
            android:layout_marginTop="@dimen/smallMargin"
            android:scaleType="centerInside"
            app:debug="true"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bigHumbleViewImageA"
            app:loadedImageScaleType="centerCrop"
            app:srcCompat="@drawable/ic_photo_black"
            app:url="https://c1.staticflickr.com/1/299/20308321465_1f4ed99416_k.jpg" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>