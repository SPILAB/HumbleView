<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="spilab.net.humbleview">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".HumbleViewApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".singleimage.SingleImageActivity"
            android:label="@string/activity_title_single_image" />
        <activity
            android:name=".imageslist.ImagesListActivity"
            android:label="@string/activity_title_images_list" />
        <activity android:name=".decodescale.DecodeScale" />
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/activity_title_settings" />
        <activity android:name=".offline.Offline" />
        <activity android:name=".offline.OfflineActivity"></activity>
    </application>

</manifest>